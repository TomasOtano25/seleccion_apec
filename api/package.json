{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon --exec ts-node src/index.ts",
    "seed": "ts-node seeders/Seed.ts",
    "build": "tsc -b",
    "db:setup": "ts-node ./src/test-utils/setup.ts",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register src/tests/*.spec.ts --timeout 5000 --exit",
    "coverage": "cross-env NODE_ENV=test nyc mocha -r ts-node/register src/tests/*.spec.ts --timeout 5000 --exit",
    "clear:coverage": "rimraf coverage/** && rimraf .nyc_output/**"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.17.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "helmet": "^3.16.0",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.15"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "^0.0.42",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.6",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^11.11.6",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cross-env": "^5.2.0",
    "jest": "^24.5.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.11",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/tests/*.ts",
      "src/tests/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
